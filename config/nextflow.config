process {
  executor = 'local'
  maxForks = 32
  cpus = 8
  memory = '32 GB'
  time = '6h'

  // Specific overrides for heavy steps:
  withName: STAR_ALIGN {
    cpus = 16
    memory = '64 GB'
    time = '12h'
  }

  withName: SALMON_QUANT {
    cpus = 8
    memory = '32 GB'
    time = '4h'
  }

  withName: MULTIQC {
    cpus = 2
    memory = '4 GB'
    time = '2h'
  }

  withName: READDUPLICATION {
    cpus = 4
    memory = '64 GB'
    time = '8h'
  }

}

singularity {
  enabled = true
  autoMounts = true
  cacheDir = "./.singularity_cache"
}

